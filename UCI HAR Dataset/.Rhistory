tidytable <- meanstdtbl %>% group_by(Volunteer_ID, Activity) %>% summarise_each(funs(mean)) ##group meansstdtbl by columns then apply mean function
write.table(tidytable, "tidytable.txt", row.names = FALSE) ##write tidytable to txt file
